{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>rwunderer/renovate",
    "github>rwunderer/renovate:container-tools",
    "github>rwunderer/renovate:cosign-version",
    "customManagers:dockerfileVersions"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "cilium-cli"
      ],
      "automerge": true,
      "addLabels": [
        "renovate_publish"
      ]
    },
    {
      "matchPackageNames": [
        "cilium-cli"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "enabled": false
    }
  ]
}
